<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_margin="8dp"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="8dp" android:background="@drawable/shape_card">
  <TextView android:id="@+id/username"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:textSize="20dp" android:text="用户名"/>
  <TextView android:id="@+id/comment"
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:textSize="16dp" android:text="评论"
      android:layout_marginTop="8dp"/>
  <TextView android:id="@+id/time"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:textSize="12dp" android:text="时间"
      android:layout_marginTop="4dp"/>
</LinearLayout>